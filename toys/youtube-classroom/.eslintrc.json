{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/extensions": "off",
    "implicit-arrow-linebreak": "off",
    "no-new": "off",
    "no-unused-vars": "off",
    "no-plusplus": "off",
    "no-tabs": "off",
    "no-alert": "off",
    "no-console": "off",
    "class-methods-use-this": "off",
    "function-paren-newline": "off",
    "indent": "off"
  }
}
